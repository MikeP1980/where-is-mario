<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{% if page.title %}{{ page.title }} | {% endif %}{{ manifest.name }}</title>
<link rel="manifest" href="/manifest.json">
<link rel="canonical" href="{{ page.url | absoluteURL }}" />
<link rel="apple-touch-icon" href="/icons/apple-touch-192.png" />
<meta name="author" content="{{ pkg.author.name }}" />
<meta name="description" content="{{ tldr or manifest.description }}" />
<meta name="generator" content="Eleventy {{ pkg.devDependencies['@11ty/eleventy'] | replace('^', '') }}" />
<meta name="theme-color" content="{{ manifest.theme_color }}" />

<!-- Hide from search engines -->
<meta name="robots" content="noindex,nofollow" />

<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
<link rel="icon" type="image/svg+xml" sizes="any" href="/favicon.svg" />

<!-- Social Media tags -->
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:description" content="{{ tldr or manifest.description }}" />
<meta property="og:title" content="{{ manifest.name }}" />
<meta property="og:url" content="{{ page.url | absoluteURL }}" />
<meta property="og:image" content="{{ '/img/card.jpg' | absoluteURL }}" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:domain" content="{{ '' | absoluteURL | hostname }}" />
<meta name="twitter:url" content="{{ page.url | absoluteURL }}" />
<meta name="twitter:title" content="{{ manifest.name }}" />
<meta name="twitter:description" content="{{ tldr or manifest.description }}" />
<meta name="twitter:image" content="{{ '/img/card.jpg' | absoluteURL }}" />

<!-- Style sheets -->
<style>{% include 'styles/keyframes.css' %}</style>
<style>{% include 'styles/colors.css' %}</style>
<style>{% include 'styles/typography.css' %}</style>
<style>{% include 'styles/main.css' %}</style>

<link rel="preload" href="/SuperMario256.ttf" as="font" type="font/ttf" crossorigin />