<style>{% include 'styles/images.css' %}</style>

<amp-inline-gallery layout="container">
  <amp-base-carousel
    layout="responsive"
    width="4"
    height="3"
    loop="true"
    auto-advance="true"
    auto-advance-interval="5000"
  >
    {% for image in images %}
      {% if image.provider == 'imgur' %}
        {% imgur image %}
      {% else %}
        {# TODO: add more providers, if needed #}
      {% endif %}
    {% endfor %}
  </amp-base-carousel>
</amp-inline-gallery>